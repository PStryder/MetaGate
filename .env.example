# MetaGate Environment Configuration
# Copy this file to .env and modify as needed

# Database
DATABASE_URL=postgresql+asyncpg://metagate:metagate@db:5432/metagate

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Authentication
# IMPORTANT: Change this in production!
JWT_SECRET=change-me-in-production-use-a-secure-random-string
JWT_ALGORITHM=HS256
# JWT_ISSUER=  # Optional: validate JWT issuer
API_KEY_HEADER=X-API-Key

# MetaGate Configuration
METAGATE_VERSION=0.1
DEFAULT_STARTUP_SLA_SECONDS=120
RECEIPT_RETENTION_HOURS=72

# ReceiptGate integration (optional)
RECEIPTGATE_ENDPOINT=http://localhost:8090
RECEIPTGATE_AUTH_TOKEN=your-receiptgate-token
RECEIPTGATE_EMIT_RECEIPTS=true

# Tenant Defaults
DEFAULT_TENANT_KEY=default
DEFAULT_DEPLOYMENT_KEY=default
